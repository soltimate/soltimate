@using Microsoft.AspNetCore.Identity
@using SoltimateWeb.ViewModels
@using SoltimateLib.Models.Identity

@inject SignInManager<SoltimateUser> SignInManager
@inject UserManager<SoltimateUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Account" asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="nav-link btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Auth" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    </ul>
}
